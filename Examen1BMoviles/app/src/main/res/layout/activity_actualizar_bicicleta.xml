<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ActualizarMarca">

    <TextView
        android:id="@+id/txt_titulo_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar bicicleta"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/txt_ingrese_actualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Ingresa los nuevos datos"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_activity"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_activity"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_activity" />

    <Button
        android:id="@+id/btn_actualizar_bicicleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <TextView
        android:id="@+id/txt_seleccionado_bicicleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nombre Bicicleta"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_activity"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_activity"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_activity" />

    <EditText
        android:id="@+id/input_update_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nuevo modelo"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <EditText
        android:id="@+id/input_update_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nuevo precio"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_update_anio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_update_anio"
        app:layout_constraintTop_toBottomOf="@+id/input_update_anio" />

    <EditText
        android:id="@+id/input_update_tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nuevo tipo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_update_modelo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_update_modelo"
        app:layout_constraintTop_toBottomOf="@+id/input_update_modelo" />

    <EditText
        android:id="@+id/input_update_anio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Nuevo aÃ±o"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/input_update_tipo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_update_tipo"
        app:layout_constraintTop_toBottomOf="@+id/input_update_tipo" />

    <CheckBox
        android:id="@+id/input_update_disponible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Disponible"
        app:layout_constraintEnd_toEndOf="@+id/input_update_precio"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/input_update_precio"
        app:layout_constraintTop_toBottomOf="@+id/input_update_precio" />

</androidx.constraintlayout.widget.ConstraintLayout>