<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ActualizarMarca">

    <TextView
        android:id="@+id/txt_titulo_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar marca"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.056" />

    <TextView
        android:id="@+id/txt_ingrese_actualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Ingresa nuevos datos de la marca"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_activity"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_activity"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_activity" />

    <EditText
        android:id="@+id/input_update_nombre_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:ems="10"
        android:hint="Nuevo nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/txt_ingrese_actualizacion"
        app:layout_constraintStart_toStartOf="@+id/txt_ingrese_actualizacion"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_update_pais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:ems="10"
        android:hint="Nuevo país"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_update_nombre_res"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_update_nombre_res"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_update_sede"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:ems="10"
        android:hint="Nueva sede"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_update_fecha_creacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_update_fecha_creacion"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_update_fecha_creacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="376dp"
        android:ems="10"
        android:hint="Nueva fecha de creación"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/input_update_pais"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_update_pais"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_actualizar_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/input_update_sede"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/input_update_sede" />

    <TextView
        android:id="@+id/txt_seleccionado_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Nombre Marca"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_titulo_activity"
        app:layout_constraintStart_toStartOf="@+id/txt_titulo_activity"
        app:layout_constraintTop_toBottomOf="@+id/txt_titulo_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>