<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo con esquinas redondeadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" /> <!-- Ajusta el color de fondo según tus preferencias -->
            <corners android:radius="500dp" /> <!-- Ajusta el radio según el grado de redondez deseado -->
            <stroke
                android:width="1dp"
                android:color="@color/border" />
        </shape>
    </item>
</layer-list>